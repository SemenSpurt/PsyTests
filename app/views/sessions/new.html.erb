<h1>Вход</h1>

<%= form_with model: @user, url: :session do |form| %>

    <div>
        <%= form.label :email, "Электронная почта" %>
        <%= form.email_field :email %>
    </div>

    <div>
        <%= form.label :password, "Пароль" %>
        <%= form.password_field :password %>
    </div>

    <div>
    <%= form.submit "Вход" %>
    </div>  
<% end %>

<%= link_to "Забыли пароль?", :new_password_reset %>